@model ToDoList.Models.Item

<html>
<head>
    
    <title>To Do List - Details</title>
</head>
<body>
    <h2>Details</h2>
    <hr/>
    @Html.DisplayNameFor(model => model.Description) : @Html.DisplayFor(model => model.Description)
    <p>@Html.ActionLink("Back to List", "Index")</p>
    <h4>@Html.DisplayNameFor(model => model.Description)</h4>
    <ul>
        @foreach (var listItem in Model)
        {
            <li>@Html.DisplayFor(modelItem => listItem.Description) | @Html.ActionLink("Details", "Details", new { id = listItem.ItemId })</li>
        }
    </ul>
</body>
</html>